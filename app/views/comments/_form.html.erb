<%= simple_form_for([@post, @post.comments.build]) do |f| %>
     <div class="field">
    <div class="control">
      <%= f.input :name, input_html: { class: 'input' }, wrapper: false, lable_html:{class: 'lable'} %>
    </div>
    <div class="control">
      <%= f.input :comment, input_html: { class: 'textarea' }, wrapper: false, lable_html:{class: 'lable'} %>
    </div>
  </div>
  <%= f.button :submit,  class:'button is-primary'%>

<% end %>